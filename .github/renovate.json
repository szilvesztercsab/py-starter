{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "automergeStrategy": "squash",
  "extends": [
    "config:best-practices"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "pre-commit": {
    "enabled": true
  },
  "semanticCommits": "enabled"
}
